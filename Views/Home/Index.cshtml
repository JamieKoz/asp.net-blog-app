@model IEnumerable<Models.Blog>

<div class="container mt-5">
    <div class="row justify-content-between">
        <div class="col-6">
            <h1>Blog Entries</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Home" class="btn btn-primary">Create New Blog</a>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td>@blog.BlogId</td>
                            <td>@blog.Title</td>
                            <td>@blog.Content</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@blog.BlogId" asp-controller="Home"
                                    class="btn btn-info btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@blog.BlogId" asp-controller="Home"
                                    class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
